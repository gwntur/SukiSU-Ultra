name: Sync Fork with Upstream

on:
  schedule:
    # Menjalankan setiap jam
    - cron: '0 * * * *'
  workflow_dispatch:

jobs:
  sync:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Fork
        uses: actions/checkout@v4
        with:
          # Gunakan Personal Access Token (PAT) agar bisa melakukan push
          token: ${{ secrets.GH_PAT }}
          fetch-depth: 0

      - name: Sync with Upstream
        run: |
          git config --global user.name 'github-actions'
          git config --global user.email 'github-actions@github.com'
          
          # Tambahkan repositori asli sebagai 'upstream'
          git remote add upstream https://github.com/SukiSU-Ultra/SukiSU-Ultra.git
          
          # Ambil semua perubahan dari upstream
          git fetch upstream
          
          # Reset branch main Anda ke branch main upstream
          git checkout main
          git reset --hard upstream/main
          
          # Paksa push perubahan ke fork Anda
          git push origin main --force
